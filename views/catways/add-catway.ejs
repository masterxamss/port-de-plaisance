<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/main.css">
<link rel="stylesheet" href="/css/add-catway.css">
</head>
<body class="d-flex flex-column">
<%- include('../includes/navigation.ejs') %>
<main>
  <section class="section-container">
    <header class="section-container__header">
      <img src="/images/helm32x32.png" alt="logo">
      <h1>Catway Dashboard</h1>
    </header>

    <section class="section-container__body">
      <aside class="body-aside">
        <a href="<% if (editMode) { %>/catways/get-catway/<%= catway.catwayNumber %><% } else { %>/catways/list<% } %>" class="btn btn-secondary w-75 text-start">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-left" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0z"/>
            <path fill-rule="evenodd" d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708z"/>
          </svg>
          Retour
        </a>
      </aside>
      <div class="body-content">
        <form action="<% if (editMode) { %>/catways/edit/<%= catway._id %>?_method=PUT<% } else { %>/catways/add<% } %>" method="POST" class="body-content__form">
          <header class="header-from">
            <img src="/images/helm32x32.png" alt="logo">
            <h2><%= editMode ? 'Modifier un catway' : 'Ajouter un catway' %></h2>
          </header>
          <div class="body-form">
            <aside class="body-form__aside">
              <% if (editMode) { %>
                <button type="submit" class="btn btn-warning btn-sm">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                    <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001m-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708z"/>
                  </svg>
                  Modifier
                </button>
              <% } else { %>
                <button type="submit" class="btn btn-success btn-sm">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
                  </svg>
                  Ajouter
                </button>
              <% } %>
              <button type="reset" class="btn btn-secondary btn-sm">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-octagon" viewBox="0 0 16 16">
                  <path d="M4.54.146A.5.5 0 0 1 4.893 0h6.214a.5.5 0 0 1 .353.146l4.394 4.394a.5.5 0 0 1 .146.353v6.214a.5.5 0 0 1-.146.353l-4.394 4.394a.5.5 0 0 1-.353.146H4.893a.5.5 0 0 1-.353-.146L.146 11.46A.5.5 0 0 1 0 11.107V4.893a.5.5 0 0 1 .146-.353zM5.1 1 1 5.1v5.8L5.1 15h5.8l4.1-4.1V5.1L10.9 1z"/>
                  <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708"/>
                </svg>
                Annuler
              </button>
            </aside>
            <div class="body-form__data">
              <div class="mb-3">
                <label for="catway_number" class="form-label">Numéro Catway</label>
                <input type="number" class="form-control" name="catway_number" id="catway_number" readonly value="<%= editMode ? catway.catwayNumber : nextCatway %>">
              </div>
              <div class="mb3">
                <label for="type" class="form-label">Type</label>
                <select name="type" id="type" class="form-select">
                    <option value="" class="form-option">Choisir une option</option>
                    <option value="long" class="form-option" <% if (editMode && catway.type == 'long') { %> selected <% } %>>Long</option>
                    <option value="short" class="form-option" <% if (editMode && catway.type == 'short') { %> selected <% } %>>Short</option>
                </select>
              </div>
              <div class="mb3">
                <label for="catway_state" class="form-label">État</label>
                <textarea name="catway_state" class="form-control" id="catway_state" rows="5" style="resize:none"><%= editMode ? catway.catwayState : '' %></textarea>
              </div>
            </div>  
          </div>
          <footer class="footer-form">
          </footer>
        </form>
      </div>
    </section>

    <footer class="section-container__footer">
      <div>

      </div>
      <div>
        <p>
          Total Catways : [<%= catways.length %>]
        </p>
        <p>
          Total Réserves : [<%= reservations.length %>]
        </p>
      </div>
      <div>
        <p><%= moment(Date.now()).format('DD/MM/YYYY') %></p>
      </div>
    </footer>
  </section>
  <%- include('../includes/error-message.ejs') %>
</main>
<%- include('../includes/end.ejs') %>